{
  "manifest_version": 3,
  "name": "Real-Time Video Translation",
  "version": "1.0",
  "description": "Adds real-time subtitles and audio translation to videos.",
  
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_title": "Video Translation",
    "default_popup": "hello.html"
  },

  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["<all_urls>"]
    }
  ]
}
