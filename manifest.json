{
  "name": "Real-Time Multilingual Video Subtitle & Dubbing",
  "description": "Overlays subtitles and enables safe audio capture for translation/dubbing on YouTube videos.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "ws://localhost:3000/*"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "hello.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
