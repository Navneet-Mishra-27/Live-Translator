{
  "manifest_version": 3,
  "name": "Real-time Multilingual Video Subtitles",
  "version": "1.0",
  "description": "Captures video audio, sends to backend, and displays live translated subtitles.",
  
  "permissions": [
    "tabs",
    "scripting",
    "activeTab"
  ],
  
  "host_permissions": [
    "*://*/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_title": "Multilingual Subtitles",
     "default_icon": "icon.png",
    "default_popup": "hello.html"
  },

  "icons": {
   
    "128": "icon.png"
  }
}
