{
  "name": "Real-Time Multilingual Video Subtitle & Dubbing",
  "description": "Overlays subtitles and enables safe audio capture for translation/dubbing on YouTube videos.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "hello.html"
  }
}
